run = "npm run watch"
modules = ["nodejs-20", "web", "bash"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 4200
externalPort = 80

[workflows]
runButton = "Start Development Server"

[[workflows.workflow]]
name = "Start Development Server"
author = 46580335
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ng serve --host 0.0.0.0 --port 4200"

[deployment]
run = ["sh", "-c", "npm run watch"]
